<%= form_for product do |f|  %>
<div class="form-group">
    <h4><%= f.label :name %></h4>
    <h4><%= f.text_field :name %></h4>
</div>
<div class="form-group">
    <h4><%= f.label :description %></h4>
    <h4><%= f.text_area :description %></h4>
  </div>
  <div class="form-group">
    <h4><%= f.label :price %></h4>
    <h4><%= f.number_field :price %></h4>
  </div>
  <div class="form-group">
    <h4><%= f.label :url %></h4>
    <h4><%= f.text_field :url %></h4>
  </div>
    <h4>
    <%= f.submit "Submit", class:"btn btn-primary"%>
    </h4>
<% end %>

